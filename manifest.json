{
  "manifest_version": 3,  // 使用最新的 V3 版本规范
  "name": "获取当前网页网址",
  "version": "1.0",
  "description": "一键获取当前浏览网页的网址",
  "permissions": ["activeTab"],  // 仅获取当前活跃标签页权限
  "action": {
    "default_popup": "popup.html",  // 点击插件图标显示的页面
    "default_icon": {
      "16": "icon16.png",   // 可自定义图标（可选）
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}